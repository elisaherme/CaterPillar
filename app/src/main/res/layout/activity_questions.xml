<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionsActivity">

    <TextView
        android:id="@+id/question_sleep"
        android:layout_width="506dp"
        android:layout_height="49dp"
        android:text="What time do you usually go to sleep?"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="400dp"
        tools:layout_editor_absoluteY="535dp" />

    <TextView
        android:id="@+id/questions_title"
        android:layout_width="504dp"
        android:layout_height="58dp"
        android:layout_marginStart="611dp"
        android:layout_marginLeft="611dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="611dp"
        android:layout_marginRight="611dp"
        android:text="Tell us about yourself!"
        android:textColor="@color/colorPrimary"
        android:textSize="50sp"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/question_wake"
        android:layout_width="478dp"
        android:layout_height="49dp"
        android:text="What time do you usually wake up?"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="400dp"
        tools:layout_editor_absoluteY="114dp" />

    <TimePicker
        android:id="@+id/wake_timePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:timePickerMode="clock"
        tools:layout_editor_absoluteX="426dp"
        tools:layout_editor_absoluteY="207dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        tools:layout_editor_absoluteX="906dp"
        tools:layout_editor_absoluteY="114dp" />

    <TextView
        android:id="@+id/timePickerValue"
        android:layout_width="112dp"
        android:layout_height="41dp"
        android:text="TextView"
        tools:layout_editor_absoluteX="906dp"
        tools:layout_editor_absoluteY="207dp" />
</android.support.constraint.ConstraintLayout>